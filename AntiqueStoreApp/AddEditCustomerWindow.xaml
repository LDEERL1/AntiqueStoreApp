<Window x:Class="AntiqueStoreApp.AddEditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AntiqueStoreApp"
        Title="Добавить/Редактировать Покупателя" Height="250" Width="300">

    <Window.Resources>
        <!-- Регистрируем конвертер в окне -->
        <local:TextToVisibilityConverter x:Key="TextToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid Margin="10,10,10,0" VerticalAlignment="Top" Height="30">
            <TextBox x:Name="FullNameTextBox" />
            <TextBlock Text="Введите ФИО покупателя" 
                       Foreground="Gray" 
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0" 
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.Length, ElementName=FullNameTextBox, Converter={StaticResource TextToVisibilityConverter}}" />
        </Grid>

        <Grid Margin="10,50,10,0" VerticalAlignment="Top" Height="30">
            <TextBox x:Name="ContactDetailsTextBox" />
            <TextBlock Text="Введите контактные данные" 
                       Foreground="Gray" 
                       VerticalAlignment="Center" 
                       Margin="5,0,0,0" 
                       IsHitTestVisible="False"
                       Visibility="{Binding Text.Length, ElementName=ContactDetailsTextBox, Converter={StaticResource TextToVisibilityConverter}}" />
        </Grid>

        <Button Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="SaveCustomer" />
    </Grid>
</Window>
