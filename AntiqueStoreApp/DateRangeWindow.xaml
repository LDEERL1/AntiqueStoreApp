<Window x:Class="AntiqueStoreApp.DateRangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор диапазона дат" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Content="Начальная дата:" Grid.Row="0" />
        <DatePicker x:Name="StartDatePicker" Grid.Row="1" Margin="0,5,0,10" />

        <Label Content="Конечная дата:" Grid.Row="2" />
        <DatePicker x:Name="EndDatePicker" Grid.Row="3" Margin="0,5,0,10" />

        <Button Content="Применить" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="100" Click="ApplyDateFilter" />
    </Grid>
</Window>
