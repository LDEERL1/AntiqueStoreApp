<Window x:Class="AntiqueStoreApp.AddEditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать Заказ" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Верхняя часть -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Покупатель:" VerticalAlignment="Center" Margin="5" />
            <ComboBox x:Name="CustomerComboBox" Width="200" Margin="5" DisplayMemberPath="FullName" SelectedValuePath="ID" />

            <TextBlock Text="Дата заказа:" VerticalAlignment="Center" Margin="15,0,5,0" />
            <DatePicker x:Name="OrderDatePicker" Width="150" Margin="5" />
        </StackPanel>

        <!-- Центральная часть -->
        <DataGrid x:Name="OrderDetailsGrid" Grid.Row="1" AutoGenerateColumns="False" 
          CanUserAddRows="True" IsReadOnly="False" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Товар" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ProductName}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding Products, RelativeSource={RelativeSource AncestorType=Window}}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="ID"
                              SelectedValue="{Binding ProductID, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100" />
                <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>


        <!-- Нижняя часть -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="5" Click="SaveOrder" />
            <Button Content="Отмена" Width="100" Margin="5" Click="CancelOrder" />
        </StackPanel>
    </Grid>
</Window>
